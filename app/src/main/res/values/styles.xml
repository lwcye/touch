<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- Base application theme. -->
    <style name="LauncherTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="FullScreenDialog">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- 全屏对话框(背景透明) -->
    <style name="FullScreenDialogTrans" parent="FullScreenDialog">
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="view_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/gray4</item>
    </style>

    <style name="view_line_vir">
        <item name="android:layout_width">@dimen/y1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/gray2</item>
    </style>

    <style name="view_line_block">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y10</item>
        <item name="android:background">@color/gray2</item>
    </style>
</resources>
